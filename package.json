{
  "name": "mycomics-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/config/config.development.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/config/config.development.ts migration:generate ./src/database/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/config/config.development.ts migration:run"
  }
}
